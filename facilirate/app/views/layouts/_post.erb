<%
room = Room.where('id = ?', post.room_id).first
roomNum = room.roomNum
building = (Building.where('id = ?', room.building_id).first)
buildingName = building.name
facility = (FacilityType.where('id = ?', room.facilitytype_id).first)
date = Date.parse(post.created_at.to_s)
if facility != nil then
    type = facility.ftype
else
    type = "Lab"
end
%>

<hr />
<p class="postRating">
    <strong><%= post.rating %>/5</strong>
</p>
<p class='buildingName'>
    <%= buildingName %>
    <%= roomNum %>
    (<%= type %>)
</p>

<p class='username'>
    <%= user %> - <%= date %>
</p>
<p>
    <%= post.review %>
</p>
<% # if current_user == post.user_id%>
<!--id:post.id, review:post.review,rating:post.rating,building:building,room:room,facility:facility
:id=>post.id, :review=>post.review,:rating=>post.rating,:building=>building,:room=>room,:facility=>facility-->
<%=link_to "Edit", "../facility/edit?id="+post.id.to_s+"&review="+post.review+"&rating="+post.rating.to_s+"&building="+buildingName.to_s+"&room="+roomNum.to_s+"&facility="+facility.ftype.to_s, class:"btn btn-default normalizedLinks"%>
<%#link_to "Delete", "facility/delete", data: { confirm: "Delete Review?" }%>
<%#end%>
<br />
